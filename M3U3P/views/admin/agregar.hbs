<div class="container">
    <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data" style="margin: 100px ;" >
        <h2 style="margin-top: 10px;">Agregar una nueva novedad</h2>
        <div class="mb-3">
            <label for="usuario" class="form-label">Titulo</label>
            <input type="text" class="form-control" id="titulo" name="titulo">
            <div class="mb-3" style="margin-top: 20px;">
                <label for="usuario" class="form-label">Subtitulo</label>
                <textarea type="text" class="form-control" name="subtitulo"></textarea>
            </div>
            <div class="mb-3" style="margin-top: 20px;">
                <label for="usuario" class="form-label">Cuerpo</label>
                <textarea type="text" class="form-control" name="cuerpo"></textarea>
            </div>
            <div class="form-group">
                <label> Imagen: <input type="file" name="imagen" id="imagen" class="form-control" /></label>
            </div>

            <button type="submit" class="btn btn-outline-dark" style="margin-top: 10px;">Agregar</button>
    </form>
    {{#if error}}
    <p>{{message}}</p>
    {{/if}}
</div>